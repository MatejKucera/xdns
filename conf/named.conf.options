options {
    directory "/var/cache/bind";

    forwarders {
        8.8.8.8;
        8.8.4.4;
    };

    recursion yes;
    allow-query { any; };
    allow-recursion { any; };

    querylog yes;
};

logging {
    channel query_log {
        file "/var/log/named/query.log" versions 3 size 10m;
        severity dynamic;
        print-time yes;
    };
    category queries { query_log; };
};