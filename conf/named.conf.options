options {
    directory "/var/cache/bind";

    forwarders {
        8.8.8.8;
        8.8.4.4;
    };

    recursion yes;
    allow-query { any; };
    allow-recursion { any; };

    querylog yes;
};

logging {
    channel querylog {
        file "/var/log/named/query.log" versions 3 size 10m;
        print-time yes;
        print-category yes;
        print-severity yes;
        severity debug;
    };

    category queries { querylog; };
};